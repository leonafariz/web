  <script>
    // Generate twinkling stars
    function createStars(containerId, count) {
      const container = document.getElementById(containerId);
      if (!container) return;
      
      for (let i = 0; i < count; i++) {
        const star = document.createElement('div');
        star.className = 'star';
        star.style.left = Math.random() * 100 + '%';
        star.style.top = Math.random() * 100 + '%';
        star.style.animationDelay = Math.random() * 3 + 's';
        container.appendChild(star);
      }
    }
    
    // Create stars for each purple section
    createStars('hero-stars', 50);
    createStars('services-stars', 60);
    createStars('contact-stars', 40);
    
    const defaultConfig = {
      hero_title: "Hai, Saya Khoirul Faridz",
      hero_subtitle: "Desainer Grafis Spesialis Visual Branding & Media Digital",
      hero_description: "Saya seorang desainer grafis yang berfokus pada visual branding dan media digital. Saya terbiasa mengolah ide menjadi tampilan visual yang komunikatif, relevan dengan target audiens, serta memiliki nilai estetika yang kuat. Bagi saya, desain bukan hanya soal tampilan, tetapi juga tentang pesan dan identitas.",
      about_title: "Portofolio Saya",
      contact_email: "projectkhoirulfaridz@gmail.com",
      contact_instagram: "@khoirulfaridz_ | @qwelstd",
      contact_linkedin: "linkedin.com/in/khoirulfaridz",
      background_color: "#6A1B9A",
      surface_color: "#FFFFFF",
      text_color: "#FFFFFF",
      primary_action_color: "#512DA8",
      secondary_text_color: "#CE93D8",
      font_family: "Inter",
      font_size: 16
    };

    async function onConfigChange(config) {
      const heroTitle = config.hero_title || defaultConfig.hero_title;
      const heroSubtitle = config.hero_subtitle || defaultConfig.hero_subtitle;
      const heroDescription = config.hero_description || defaultConfig.hero_description;
      const aboutTitle = config.about_title || defaultConfig.about_title;
      const contactEmail = config.contact_email || defaultConfig.contact_email;
      const contactInstagram = config.contact_instagram || defaultConfig.contact_instagram;
      const contactLinkedin = config.contact_linkedin || defaultConfig.contact_linkedin;
      
      const bgColor = config.background_color || defaultConfig.background_color;
      const surfaceColor = config.surface_color || defaultConfig.surface_color;
      const textColor = config.text_color || defaultConfig.text_color;
      const primaryColor = config.primary_action_color || defaultConfig.primary_action_color;
      const secondaryTextColor = config.secondary_text_color || defaultConfig.secondary_text_color;
      
      const customFont = config.font_family || defaultConfig.font_family;
      const baseFontSize = config.font_size || defaultConfig.font_size;
      const baseFontStack = '-apple-system, BlinkMacSystemFont, sans-serif';
      
      // Apply gradient backgrounds
      document.querySelectorAll('.gradient-purple-bg').forEach(el => {
        el.style.background = `linear-gradient(135deg, ${bgColor} 0%, ${primaryColor} 50%, ${secondaryTextColor} 100%)`;
      });
      
      document.querySelectorAll('section#about, section#tools').forEach(el => {
        el.style.background = surfaceColor;
      });
      
      // Update text content
      document.getElementById('hero-title').textContent = heroTitle;
      document.getElementById('hero-title').style.color = textColor;
      document.getElementById('hero-title').style.fontFamily = `${customFont}, ${baseFontStack}`;
      document.getElementById('hero-title').style.fontSize = `${baseFontSize * 3}px`;
      
      document.getElementById('hero-subtitle').textContent = heroSubtitle;
      document.getElementById('hero-subtitle').style.color = secondaryTextColor;
      document.getElementById('hero-subtitle').style.fontFamily = `${customFont}, ${baseFontStack}`;
      document.getElementById('hero-subtitle').style.fontSize = `${baseFontSize * 1.5}px`;
      
      document.getElementById('hero-description').textContent = heroDescription;
      document.getElementById('hero-description').style.color = textColor;
      document.getElementById('hero-description').style.fontFamily = `${customFont}, ${baseFontStack}`;
      document.getElementById('hero-description').style.fontSize = `${baseFontSize * 1.125}px`;
      
      document.getElementById('about-title').textContent = aboutTitle;
      document.getElementById('about-title').style.color = primaryColor;
      document.getElementById('about-title').style.fontFamily = `${customFont}, ${baseFontStack}`;
      document.getElementById('about-title').style.fontSize = `${baseFontSize * 2.5}px`;
      
      // Update navigation
      document.getElementById('nav-logo').style.color = primaryColor;
      document.querySelectorAll('nav a').forEach(link => {
        link.style.color = primaryColor;
      });
      
      // Update buttons
      document.querySelectorAll('a[href="#services"]').forEach(btn => {
        btn.style.background = surfaceColor;
        btn.style.color = primaryColor;
      });
      
      document.querySelectorAll('button[type="submit"]').forEach(btn => {
        btn.style.background = primaryColor;
        btn.style.color = surfaceColor;
      });
      
      // Update contact info
      document.getElementById('contact-email-link').textContent = contactEmail;
      document.getElementById('contact-email-link').href = `mailto:${contactEmail}`;
      
      const instagramHandles = contactInstagram.split('|').map(h => h.trim());
      if (instagramHandles.length >= 2) {
        document.getElementById('contact-instagram-link1').textContent = instagramHandles[0];
        document.getElementById('contact-instagram-link1').href = `https://instagram.com/${instagramHandles[0].replace('@', '')}`;
        document.getElementById('contact-instagram-link2').textContent = instagramHandles[1];
        document.getElementById('contact-instagram-link2').href = `https://instagram.com/${instagramHandles[1].replace('@', '')}`;
      }
      
      document.getElementById('contact-linkedin-link').textContent = contactLinkedin;
      const linkedinUsername = contactLinkedin.includes('/') ? contactLinkedin.split('/').pop() : contactLinkedin;
      document.getElementById('contact-linkedin-link').href = `https://linkedin.com/in/${linkedinUsername}`;
      
      // Apply font to all text
      document.querySelectorAll('h1, h2, h3, p, a, button, label').forEach(el => {
        el.style.fontFamily = `${customFont}, ${baseFontStack}`;
      });
    }

    function mapToCapabilities(config) {
      return {
        recolorables: [
          {
            get: () => config.background_color || defaultConfig.background_color,
            set: (value) => {
              if (window.elementSdk) {
                config.background_color = value;
                window.elementSdk.setConfig({ background_color: value });
              }
            }
          },
          {
            get: () => config.surface_color || defaultConfig.surface_color,
            set: (value) => {
              if (window.elementSdk) {
                config.surface_color = value;
                window.elementSdk.setConfig({ surface_color: value });
              }
            }
          },
          {
            get: () => config.text_color || defaultConfig.text_color,
            set: (value) => {
              if (window.elementSdk) {
                config.text_color = value;
                window.elementSdk.setConfig({ text_color: value });
              }
            }
          },
          {
            get: () => config.primary_action_color || defaultConfig.primary_action_color,
            set: (value) => {
              if (window.elementSdk) {
                config.primary_action_color = value;
                window.elementSdk.setConfig({ primary_action_color: value });
              }
            }
          },
          {
            get: () => config.secondary_text_color || defaultConfig.secondary_text_color,
            set: (value) => {
              if (window.elementSdk) {
                config.secondary_text_color = value;
                window.elementSdk.setConfig({ secondary_text_color: value });
              }
            }
          }
        ],
        borderables: [],
        fontEditable: {
          get: () => config.font_family || defaultConfig.font_family,
          set: (value) => {
            if (window.elementSdk) {
              config.font_family = value;
              window.elementSdk.setConfig({ font_family: value });
            }
          }
        },
        fontSizeable: {
          get: () => config.font_size || defaultConfig.font_size,
          set: (value) => {
            if (window.elementSdk) {
              config.font_size = value;
              window.elementSdk.setConfig({ font_size: value });
            }
          }
        }
      };
    }

    function mapToEditPanelValues(config) {
      return new Map([
        ["hero_title", config.hero_title || defaultConfig.hero_title],
        ["hero_subtitle", config.hero_subtitle || defaultConfig.hero_subtitle],
        ["hero_description", config.hero_description || defaultConfig.hero_description],
        ["about_title", config.about_title || defaultConfig.about_title],
        ["contact_email", config.contact_email || defaultConfig.contact_email],
        ["contact_instagram", config.contact_instagram || defaultConfig.contact_instagram],
        ["contact_linkedin", config.contact_linkedin || defaultConfig.contact_linkedin]
      ]);
    }

    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities,
        mapToEditPanelValues
      });
    }

    document.getElementById('contact-form').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const name = document.getElementById('name').value;
      const email = document.getElementById('email').value;
      const message = document.getElementById('message').value;
      
      const subject = encodeURIComponent(`Pesan dari ${name} - Portfolio Contact`);
      const body = encodeURIComponent(`Nama: ${name}\nEmail: ${email}\n\nPesan:\n${message}`);
      
      window.open(`mailto:projectkhoirulfaridz@gmail.com?subject=${subject}&body=${body}`, '_blank');
      
      const formMessage = document.getElementById('form-message');
      formMessage.classList.remove('hidden');
      formMessage.style.background = 'rgba(102, 126, 234, 0.1)';
      formMessage.style.color = '#667eea';
      formMessage.textContent = 'Email client Anda akan terbuka. Silakan kirim email dari aplikasi email Anda.';
      
      setTimeout(() => {
        formMessage.classList.add('hidden');
      }, 5000);
    });

    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
    
    // Carousel functionality
    const carouselTrack = document.getElementById('carousel-track');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const progressBar = document.getElementById('progress-bar');
    
    function updateProgressBar() {
      const scrollWidth = carouselTrack.scrollWidth - carouselTrack.clientWidth;
      const scrollLeft = carouselTrack.scrollLeft;
      const scrollPercentage = (scrollLeft / scrollWidth) * 100;
      progressBar.style.width = Math.min(100, Math.max(0, scrollPercentage)) + '%';
    }
    
    prevBtn.addEventListener('click', () => {
      const scrollAmount = carouselTrack.clientWidth * 0.8;
      carouselTrack.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });
    
    nextBtn.addEventListener('click', () => {
      const scrollAmount = carouselTrack.clientWidth * 0.8;
      carouselTrack.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });
    
    carouselTrack.addEventListener('scroll', updateProgressBar);
    
    // Update progress bar on window resize
    window.addEventListener('resize', updateProgressBar);
    
    // Initial progress bar update
    updateProgressBar();
    
    // Hover effects for buttons
    prevBtn.addEventListener('mouseenter', () => {
      prevBtn.style.background = 'rgba(123, 31, 162, 1)';
      prevBtn.style.transform = 'translateY(-50%) scale(1.1)';
    });
    
    prevBtn.addEventListener('mouseleave', () => {
      prevBtn.style.background = 'rgba(106, 27, 154, 0.9)';
      prevBtn.style.transform = 'translateY(-50%) scale(1)';
    });
    
    nextBtn.addEventListener('mouseenter', () => {
      nextBtn.style.background = 'rgba(123, 31, 162, 1)';
      nextBtn.style.transform = 'translateY(-50%) scale(1.1)';
    });
    
    nextBtn.addEventListener('mouseleave', () => {
      nextBtn.style.background = 'rgba(106, 27, 154, 0.9)';
